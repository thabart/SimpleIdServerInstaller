<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="SimpleIdentityServerInstaller" Language="1033" Version="1.0.0.0" Manufacturer="Thierry Habart" UpgradeCode="be366706-4993-48cb-bcee-fe1fd43eaa00">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" InstallPrivileges="elevated" />
		<MediaTemplate EmbedCab="yes" />
		<Feature Id="ProductFeature" Title="SimpleIdentityServerInstaller" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
    <Property Id="PROVIDER_TYPE" Value="SimpleIdentityServer" />
    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeErrorMessage)"/>
    <UIRef Id="WixUI_SimpleIdentityServer" />
    <!-- Conditions -->
    <Condition Message="Only administrator is allowed to install the application.">
      <![CDATA[Privileged]]>
    </Condition>
    <!-- Properties -->
    <Property Id="MSIUSEREALADMINDETECTION" Value="1" />
    <Property Id="DATABASE_SERVER" />
    <Property Id="DATABASE_LOGIN" />
    <Property Id="DATABASE_PASSWORD" />
    <Property Id="DATABASE_CATALOG" />
    <Property Id="DATABASE_WINDOWSAUTHENTICATION" Secure="yes" />
    <Property Id="DATABASE_CONNECTION_CORRECT" Value="0" />
    <Property Id="DATABASE_CONNECTIONSTRING" />
    <!-- Binaries -->
    <Binary Id="CustomActions"
            src="..\SimpleIdentityServerInstaller.CustomActions\bin\$(var.Configuration)\SimpleIdentityServerInstaller.CustomActions.CA.dll" />
    <!-- Custom actions -->
    <CustomAction Id="UpdateAppSettings"
                  Return="check"
                  Execute="immediate"
                  BinaryKey="CustomActions"                  
                  DllEntry="UpdateAppSettings" />
    <CustomAction Id="TestConnection"
                  Return="check"
                  Execute="immediate"
                  BinaryKey="CustomActions"
                  DllEntry="TestConnection" />
	</Product>
  
	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="DesktopFolder" Name="Desktop">
        <Component Id="ApplicationShortcutDesktop" Guid="83c79aac-9080-4031-9a73-17590e22347f">
          <Shortcut Id="ApplicationDesktopShortcut"
              Name="Launch SimpleIdentityServer"
              Description="Launch SimpleIdentityServer"
              Target="[SIMPLEIDENTITYSERVER_INSTALLFOLDER]Launch-SimpleIdentityServer.cmd"
              WorkingDirectory="SIMPLEIDENTITYSERVER_INSTALLFOLDER"/>
          <RemoveFolder Id="DesktopFolder" On="uninstall"/>
          <RegistryValue
              Root="HKCU"
              Key="Software/SimpleIdentityServer"
              Name="installed"
              Type="integer"
              Value="1"
              KeyPath="yes"/>
        </Component>
      </Directory>
			<Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="SimpleIdentityServer">
          <Directory Id="SIMPLEIDENTITYSERVER_INSTALLFOLDER" Name="SimpleIdentityServer" />
          <!--
          <Directory Id="API_INSTALLFOLDER" Name="Api"  />
          <Directory Id="SAMPLES_INSTALLFOLDER" Name="Samples" />
          <Directory Id="WEBSITE_INSTALLFOLDER" Name="Website" />
          -->
        </Directory>
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <ComponentGroupRef Id="SimpleIdentityServerHeatGenerated"/>
      <ComponentRef Id="ApplicationShortcutDesktop"/>
      <!--
      <ComponentGroupRef Id="ApiHeatGenerated"/>
      <ComponentGroupRef Id="SamplesHeatGenerated"/>
      <ComponentGroupRef Id="WebSiteHeatGenerated"/>
      -->
		</ComponentGroup>
    <InstallExecuteSequence>
      <Custom Action="UpdateAppSettings" After="InstallFinalize">NOT Installed</Custom>
    </InstallExecuteSequence>
	</Fragment>
</Wix>
