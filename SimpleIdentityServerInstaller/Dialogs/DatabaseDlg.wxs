<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <Dialog Id="DatabaseDlg" Width="370" Height="270" Title="!(loc.DatabaseDlgTitle)">
                <!-- Header -->
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.DatabaseDlgBannerBitmap)" />
                <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DatabaseDlgHeader)" />
                <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
                <!-- Body -->
                <Control Id="DatabaseParametersGroupBox" X="30" Y="56" Text="!(loc.DatabaseParameters)" Width="326" Height="150" Type="GroupBox" />
                <Control Id="DatabaseLoginLabel" Text="!(loc.DatabaseLogin)" X="38" Y="86" Width="98" Height="17" Type="Text" />
                <Control Id="DatabasePasswordLabel" Text="!(loc.DatabasePassword)" X="35" Y="109" Width="101" Height="17" Type="Text" />
                <Control Id="DatabaseConnectionStringLabel" Text="!(loc.DatabaseConnectionString)" X="38" Y="131" Width="99" Height="17" Type="Text" />
                <Control Id="DatabaseLoginTextBox" X="142" Y="86" Type="Edit" Height="15" Width="100" />
                <Control Id="DatabasePasswordTextBox" X="142" Y="109" Type="Edit" Height="15" Width="100" />
                <Control Id="DatabaseConnectionStringTextBox" X="142" Y="131" Type="Edit" Height="15" Width="98" />
                <!-- Footer -->
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>